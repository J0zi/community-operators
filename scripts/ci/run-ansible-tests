#!/usr/bin/env bash

REPO=https://github.com/J0zi/operator-test-playbooks
BRANCH=PR/RHO-642-package-and-bundle-tests-v2
OP_PATH="upstream-community-operators/aqua"
OP_VER"1.0.2"
RUN_UPSTREAM="true"

eval $(scripts/ci/ansible-env)
ansible-pull -U $REPO -C $BRANCH -i localhost, local.yml -e ansible_connection=local \
-e run_upstream=$RUN_UPSTREAM  \
-e kind_version=$KIND_VER -e kind_kube_ver=$KUBE_VER -e olm_ver=$OLM_VER -e operator_sdk_version=$SDK_VER \
-e operator_dir=/tmp/community-operators-for-catalog/$OP_PATH -e operator_version=$OP_VER
